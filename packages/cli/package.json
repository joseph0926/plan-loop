{
  "name": "@joseph0926/plan-loop",
  "version": "1.0.4",
  "description": "MCP server for Claude-Code and Codex async collaboration with CLI setup",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "plan-loop": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
