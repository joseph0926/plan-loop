  },
  "bugs": {
    "url": "https://github.com/joseph0926/plan-loop/issues"
  },
  "homepage": "https://github.com/joseph0926/plan-loop#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@joseph0926/plan-loop-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
